{
	"tags":
	{
		"allowUnknownTags" : true
	},
	"plugins":[
		 "plugins/markdown"
		,"/Volumes/DATA/Projects/Resources/TSDoc/template/plugins/TSDoc.js"
	],
	"opts":
	{
		"template"	:"/Volumes/DATA/Projects/Resources/TSDoc/template",
		"recurse"	:"true"
	},
	"templates" : {
		"cleverLinks"     : false,
		"monospaceLinks"  : false
	},
	"source":
	{
		"includePattern": "(\\.d)?\\.ts$",
		"excludePattern": "typings",
		"exclude": [
			"./src/core/server.ts",
			"./src/core/services.ts",
			"./src/core/routes.ts",
			"./src/core/models.ts",
			"./src/core/filters.ts",
			"./src/core/controllers.ts",
			"./src/core/defaults.ts",
			"./src/server.ts"]
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	},
	"tsdoc":{
		"source"		:"/Volumes/DATA/Projects/WebNode/facile/facile-core/src/",
		"destination"	:"/Volumes/DATA/Projects/WebNode/facile/facile-core/docs",
		"tutorials"		:"",
		"systemName"	: "Facile Core",
		"footer"		: "The barebones framework!",
		"copyright"		: "Facile Copyright Â© 2016 Origin1 Technologies.",
		"outputSourceFiles" : true,
		"commentsOnly": true
	}
}
